    </select>

    <select id="typeClassifyQueryDesc" parameterType="STRING" resultMap="CarClassifyQueryMap">
        SELECT * FROM
            category
        INNER JOIN
            car
        ON
            category.car_category_id = car.id
        WHERE
            category.type = #{cons}
        ORDER BY
            shelves_time DESC
    </select>-->
</mapper>