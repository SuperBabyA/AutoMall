        ORDER BY
            car.shelves_time desc
    </select>
    <select id="timeClassifyQueryAsc" resultMap="CarClassifyQueryMap">
        SELECT * FROM
            car
        INNER JOIN
            category
        ON
            car.id = category.car_category_id
        ORDER BY
